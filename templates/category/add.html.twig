{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
    <h1>Ajouter une catégorie :</h1><br>
    <div>
        {{ form_start(form) }}
            {{ form_row(form.name) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
    </div>
    <div>
        {{ form_end(form) }}
        {% for category in categories %}
            {{ category.name }}<br>
        {%  endfor %}
    </div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}